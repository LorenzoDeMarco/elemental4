[sub_resource type="GDScript" id=1]
script/source = "extends Button

func _on_button_down():
	if disabled or toggle_mode: return
	var sfxp = GlobalSettings.get_ui_sfx_player()
	if sfxp == null: return
	sfxp.stop()
	sfxp.stream = preload(\"res://sounds/ui/button_down.ogg\")
	sfxp.play()

func _on_button_hover():
	if disabled: return
	var sfxp = GlobalSettings.get_ui_sfx_player()
	if sfxp == null: return
	sfxp.stop()
	sfxp.stream = preload(\"res://sounds/ui/button_hover.ogg\")
	sfxp.play()

func _on_button_toggled(_button_pressed):
	if disabled or not toggle_mode: return
	var sfxp = GlobalSettings.get_ui_sfx_player()
	if sfxp == null: return
	sfxp.stop()
	sfxp.stream = preload(\"res://sounds/ui/toggle.ogg\")
	sfxp.play()
"

